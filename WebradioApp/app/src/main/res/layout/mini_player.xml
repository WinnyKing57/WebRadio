<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mini_player_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="?attr/colorSurface"
    android:gravity="center_vertical"
    android:visibility="gone"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/iv_mini_player_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_radio_placeholder"
        android:contentDescription="Station Icon"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_mini_player_station_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Station Name"
        android:textAppearance="?attr/textAppearanceListItem"
        android:maxLines="1"
        android:ellipsize="end"/>

    <ImageButton
        android:id="@+id/ib_mini_player_play_pause"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_play_arrow"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Play/Pause"/>

    <ImageButton
        android:id="@+id/ib_mini_player_sleep_timer"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_settings"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Set Sleep Timer"/>
</LinearLayout>
