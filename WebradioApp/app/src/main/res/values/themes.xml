<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.WebradioApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/modern_primary</item>
        <item name="colorPrimaryVariant">@color/modern_primary_variant</item>
        <item name="colorOnPrimary">@color/modern_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/modern_secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item> <!-- TODO: Add modern_secondary_variant if available or remove if not used -->
        <item name="colorOnSecondary">@color/modern_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Material theming attributes -->
        <item name="colorSurface">@color/modern_surface</item> <!-- Light surface -->
        <item name="android:colorBackground">@color/modern_background</item> <!-- Light background -->
        <item name="colorOnSurface">@color/modern_on_surface</item> <!-- Text on light surface -->
        <item name="colorOnBackground">@color/modern_on_background</item> <!-- Text on light background -->

        <!-- Font family -->
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <!-- Accent Color Theme Overlays -->
    <style name="Theme.WebradioApp.AccentBlue" parent="Theme.WebradioApp">
        <item name="colorPrimary">@color/custom_accent_blue_500</item>
        <item name="colorPrimaryVariant">@color/custom_accent_blue_700</item>
        <item name="colorSecondary">@color/custom_accent_blue_200</item>
        <item name="colorAccent">@color/custom_accent_blue_500</item>
        <item name="colorOnPrimary">@color/white</item> <!-- Assuming white text on this blue -->
    </style>

    <style name="Theme.WebradioApp.AccentGreen" parent="Theme.WebradioApp">
        <item name="colorPrimary">@color/custom_accent_green_500</item>
        <item name="colorPrimaryVariant">@color/custom_accent_green_700</item>
        <item name="colorSecondary">@color/custom_accent_green_200</item>
        <item name="colorAccent">@color/custom_accent_green_500</item>
        <item name="colorOnPrimary">@color/white</item> <!-- Assuming white text on this green -->
    </style>

    <style name="Theme.WebradioApp.AccentOrange" parent="Theme.WebradioApp">
        <item name="colorPrimary">@color/custom_accent_orange_500</item>
        <item name="colorPrimaryVariant">@color/custom_accent_orange_700</item>
        <item name="colorSecondary">@color/custom_accent_orange_200</item>
        <item name="colorAccent">@color/custom_accent_orange_500</item>
        <item name="colorOnPrimary">@color/black</item> <!-- Orange might need black text for contrast -->
    </style>

</resources>
