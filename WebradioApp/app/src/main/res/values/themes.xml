<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.WebradioApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Material theming attributes -->
        <item name="colorSurface">@color/white</item> <!-- Light surface -->
        <item name="android:colorBackground">@color/white</item> <!-- Light background -->
        <item name="colorOnSurface">@color/black</item> <!-- Text on light surface -->
        <item name="colorOnBackground">@color/black</item> <!-- Text on light background -->
    </style>
</resources>
